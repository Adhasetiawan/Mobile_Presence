<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".view.absence.AbsenceFragment">

    <RelativeLayout
        android:id="@+id/header_abs"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/placer_three">

        <ImageView
            android:id="@+id/icon_absence"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/ic_baseline_location_disabled_24"
            android:backgroundTint="#b3ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/icon_absence"
            android:text="Absence"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="62dp"
            android:layout_toRightOf="@+id/icon_absence"
            android:text="Don't forget to check out"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_absence"
        android:layout_width="208dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@drawable/goinghome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_absence"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Jam kerja sudah selesai.\n Silahkan klik gambar diatas dan sampai jumpa besok"
        android:textAlignment="center"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_absence"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Selamat jalan"
        android:textAlignment="center"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/placer_absence"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_name"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_style_three"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Jam pulang"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextClock
            android:id="@+id/txt_presencetime"
            android:format24Hour="HH:mm:ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>