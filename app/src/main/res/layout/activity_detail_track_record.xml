<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".view.detailtrackrecord.DetailTrackRecordActivity">

    <TextView
        android:text="Daily Record"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/point"
        android:text="Take a look at your detail activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--informasi dasar-->
    <RelativeLayout
        android:id="@+id/pointsecond"
        android:layout_below="@+id/point"
        android:background="@drawable/dark_style"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_person"
            android:background="@drawable/ic_baseline_person_24"
            android:backgroundTint="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/txt_iduser"
            android:text="Id User"
            android:layout_below="@id/icon_person"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/one"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_iduser"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_date_range_24"
                android:backgroundTint="#ffffff"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/txt_date"
                android:text="Tanggal"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/two"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_iduser"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_location_on_24"
                android:backgroundTint="#ffffff"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/txt_lokasi"
                android:text="Lokasi"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_detailLat"
                android:layout_below="@id/txt_lokasi"
                android:text="Latitude"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_detailLng"
                android:layout_below="@id/txt_detailLat"
                android:text="Longitude"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/three"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_iduser"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_access_time_24"
                android:backgroundTint="#ffffff"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/txt_arrivetime"
                android:text="Jam masuk"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_leavingtime"
                android:layout_below="@id/txt_arrivetime"
                android:text="Jam pulang"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <!--kegiatan user-->
    <RelativeLayout
        android:id="@+id/pointthird"
        android:layout_below="@+id/pointsecond"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_style_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_act"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:backgroundTint="#ffffff"
            android:background="@drawable/ic_baseline_laptop_windows_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ScrollView
            android:layout_toEndOf="@id/icon_act"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_act"
                android:textColor="#ffffff"
                android:text="Kegiatan anda"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </ScrollView>
    </RelativeLayout>

    <!--masukan kegiatan baru-->
    <RelativeLayout
        android:id="@+id/pointfourth"
        android:layout_below="@id/pointthird"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_style_two"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_newact"
            android:ems="23"
            android:maxLines="4"
            android:hint="kegiatan anda"
            android:drawableEnd="@drawable/ic_baseline_laptop_windows_24"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_changeact"
        android:text="Ganti kegiatan"
        android:textAllCaps="false"
        android:background="@drawable/button_style_three"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_below="@id/pointfourth"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>