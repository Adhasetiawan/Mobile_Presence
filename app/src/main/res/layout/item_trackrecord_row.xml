<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_tr"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_baseline_history_24"
            android:layout_width="25dp"
            android:layout_height="25sp"/>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_style_two"
            android:layout_toRightOf="@id/icon_tr"
            android:layout_marginStart="10dp"
            android:layout_width="240dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/item1"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_baseline_date_range_24"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/txt_daterecord"
                android:text="2021-01-01"
                android:layout_toRightOf="@id/item1"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/item2"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_toRightOf="@id/txt_daterecord"
                android:background="@drawable/ic_baseline_location_on_24"
                android:backgroundTint="#7d7d7d"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/txt_locationrecord"
                android:text="Office"
                android:layout_toRightOf="@id/item2"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>